[include]
	path = .gitconfig.local
[core]
    excludesfile = ~/.gitignore
	editor = vim
[color]
    ui = auto
    interactive = auto
[alias]
    co = checkout
    ci = commit
    cm = commit -m
    ca = commit -a
    s = status
    b = branch
    sm = submodule
    ps = push
    pl = pull
    di = diff --color-words
    l = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
    c = commit 
    conf = config
    confg = config --global
    
